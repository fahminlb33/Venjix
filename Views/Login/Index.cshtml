@model LoginFormDto
@{
    Layout = "_LoginLayout";
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            @if (ViewData[ViewBagKeys.ErrorMessage] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData[ViewBagKeys.ErrorMessage]
                                </div>
                            }
                            <form class="user" method="post" asp-action="LoginAuthorization" asp-antiforgery="true">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" placeholder="Username" asp-for="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" placeholder="Password" asp-for="Password">
                                </div>
                                <button class="btn btn-primary btn-user btn-block" type="submit">
                                    Login
                                </button>
                                <hr>
                                <a href="https://github.com/fahminlb33/Venjix" class="btn btn-github btn-user btn-block">
                                    <i class="fab fa-github fa-fw"></i> Fork me on GitHub!
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>