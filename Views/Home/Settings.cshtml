@model SettingsEditModel
@{
    ViewData[ViewKeys.Title] = "Settings - Venjix";
    ViewData[ViewKeys.PageHeading] = "Settings";
    ViewData[ViewKeys.PageSubheading] = "Change Venjix system settings and integration.";
}

<h1 class="h3 mb-2 text-gray-800">@ViewData[ViewKeys.PageHeading]</h1>
<p class="mb-4">@ViewData[ViewKeys.PageSubheading]</p>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">@ViewData[ViewKeys.PageHeading]</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Save">
                    <div class="form-group">
                        <label asp-for="TelegramToken">Telegram Token</label>
                        <input type="text" class="form-control" asp-for="TelegramToken">
                        <span asp-validation-for="TelegramToken" class="text-danger"></span>
                    </div>

                    <h4>Health Probe</h4>
                    <p>You can check Venjix's server health status by visiting <a href="/health">this link</a>.</p>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>