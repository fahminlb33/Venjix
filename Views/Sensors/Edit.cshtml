@model SensorEditModel
@{
    ViewData[ViewKeys.Title] = Model.IsEdit ? "Edit sensor - Venjix" : "Add new sensor - Venjix";
    ViewData[ViewKeys.PageHeading] = Model.IsEdit ? "Edit Sensor" : "Add Sensor";
    ViewData[ViewKeys.PageSubheading] = Model.IsEdit ? "Edit sensor fields." : "Add sensor fields.";
}

<h1 class="h3 mb-2 text-gray-800">@ViewData[ViewKeys.PageHeading]</h1>
<p class="mb-4">@ViewData[ViewKeys.PageSubheading]</p>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">@ViewData[ViewKeys.PageHeading]</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Save">
                    <input type="hidden" asp-for="IsEdit" />
                    <input type="hidden" asp-for="SensorId" />

                    <div class="form-group">
                        <label asp-for="ApiField">API field</label>
                        <input type="text" class="form-control" asp-for="ApiField">
                        <span asp-validation-for="ApiField" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DisplayName">Display name</label>
                        <input type="text" class="form-control" asp-for="DisplayName">
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>