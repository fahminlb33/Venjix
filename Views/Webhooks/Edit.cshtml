@model WebhookEditModel
@{
    ViewData[ViewKeys.Title] = Model.IsEdit ? "Edit webhook - Venjix" : "Add new webhook - Venjix";
    ViewData[ViewKeys.PageHeading] = Model.IsEdit ? "Edit Webhook" : "Add Webhook";
    ViewData[ViewKeys.PageSubheading] = Model.IsEdit ? "Edit webhook fields." : "Add webhook fields.";
}


<vc:header-panel page-heading="@ViewData[ViewKeys.PageHeading]" page-subheading="@ViewData[ViewKeys.PageSubheading]"
                 action="" action-label="" controller="" action-icon=""></vc:header-panel>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-body">
                <form method="post" asp-action="Save">
                    <input type="hidden" asp-for="IsEdit" />
                    <input type="hidden" asp-for="WebhookId" />

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="Name">Webhook name</label>
                            <input type="text" class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-1">
                            <label asp-for="Method">Method</label>
                            <select class="form-control" asp-for="Method" asp-items="Model.Methods"></select>
                            <span asp-validation-for="Method" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="UriFormat">URI format</label>
                            <input type="text" class="form-control" asp-for="UriFormat">
                            <span asp-validation-for="UriFormat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" asp-for="JsonBody">
                        <label class="form-check-label" asp-for="JsonBody">Send JSON body</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="BodyFormat">Body format</label>
                        <textarea class="form-control" asp-for="BodyFormat" rows="5"></textarea>
                        <span asp-validation-for="BodyFormat" class="text-danger"></span>
                    </div>

                    <h4>How to string format?</h4>
                    <p>The recorded value will be availiable as <b>{{value}}</b> placeholder. Use this placeholder in your URI or body format.</p>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>