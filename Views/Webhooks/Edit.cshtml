@model WebhookEditModel
@{
    ViewData[ViewKeys.Title] = Model.IsEdit ? "Edit webhook - Venjix" : "Add new webhook - Venjix";
    ViewData[ViewKeys.PageHeading] = Model.IsEdit ? "Edit Webhook" : "Add Webhook";
    ViewData[ViewKeys.PageSubheading] = Model.IsEdit ? "Edit webhook fields." : "Add webhook fields.";
}

<h1 class="h3 mb-2 text-gray-800">@ViewData[ViewKeys.PageHeading]</h1>
<p class="mb-4">@ViewData[ViewKeys.PageSubheading]</p>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">@ViewData[ViewKeys.PageHeading]</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Save">
                    <input type="hidden" asp-for="IsEdit" />
                    <input type="hidden" asp-for="WebhookId" />

                    <div class="form-group">
                        <label asp-for="Name">Webhook name</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Method">Method</label>
                        <select class="form-control" asp-for="Method" asp-items="Model.Methods"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="UriFormat">URI format</label>
                        <input type="text" class="form-control" asp-for="UriFormat">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" asp-for="JsonBody">
                        <label class="form-check-label" asp-for="JsonBody">Send JSON body</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="BodyFormat">Body format</label>
                        <textarea class="form-control" asp-for="BodyFormat" rows="5"></textarea>
                    </div>

                    <h4>How to string format?</h4>
                    <p>Use API field name inside two curly brackets as a parameter to be replaced with a real value. Example: {{ rh }}</p>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>